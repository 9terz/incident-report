html
  head
    title= title
    link(
      rel="stylesheet",
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css",
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u",
      crossorigin="anonymous")
  body(style={background: '#F1F1F1'})
  div(class='container-fluid' style={background: '#555'})
   h1(class='text-center' style={color: 'white'})= message
  div(class='col-md-4 col-md-offset-4')
    br
    each item in board
     li(class='list-group-item')
      h4
       span(class='text-left')= item.name + ' '
       if(item.cards[0].labels[0].name=='Online')
        span(class='label label-success' style='float: right')= item.cards[0].labels[0].name
       else if (item.cards[0].labels[0].name=='Partial Functional')
        span(class='label label-warning' style='float: right')= item.cards[0].labels[0].name
       else if (item.cards[0].labels[0].name=='Offline')
        span(class='label label-danger' style='float: right')= item.cards[0].labels[0].name
    br
    a(href="#") View incident reports
